<h1 class="text-center">Edit blog post</h1>

<%= render partial: "form", locals: {method: "update", article: @article} %>

<script type="text/javascript">
  
   $('#info-button').hover(
    function() {
      $(this).animate({
        'opacity' : '.5'  
      },'fast');
    },
    function() {
      $(this).animate({
         'opacity' : "1"
      }, 'fast');
    }
  );
  
  initMiniColors();
  
  CKEDITOR.replace('text-area-article', { toolbar: 'article' });
</script>