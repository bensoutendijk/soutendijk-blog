<%= form_for @article, url: {action: "create"}, html: {class: ""} do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :text, :id => "text-area-article" %>
  <%= f.submit "Create" %>
<% end %>

<script type="text/javascript">
  initMiniColors();
  
  CKEDITOR.replace('text-area-article', { height: '640px', toolbar: 'article' });
</script>