<div class="well well-lg">
  <h1 class="text-center">Create a new blog post</h1>
  <%= form_for :article, url: articles_path do |f| %>
    <div class="row text-center">
      <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
          <h3 class="text-center">Title</h3>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </div>
    </div>
    </br>
    
    Thumbnail Preview Code
    <div class="row text-center">
      <div class="col-md-6" id="image-uploader">
        <div class="form-group">
            <span>Choose a thumbnail image:</span>
            <%= f.file_field :thumbnail, id: 'imgInp', "data-filename-placement" => 'inside' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 text-center">
        <h3>Thumbnail preview</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6" id="thumbnail-wrapper" >
        <img class="container-fluid" id="thumbnail-edit" src="#" alt="crop tool image here">
      </div>
    </div>
    </br>
    <div class="row">
      <div class="col-md-6" id="colorpicker">
         <%= f.text_field :average_color, class: 'form-control minicolors', id: "minicolors" %>
      </div>
    </div>
    
    <div class="row text-center">
      <div class="col-md-10 col-md-offset-1">
        <div class="form-group">
          <div id="ckeditor-article-text-area">
            <h3>Body</h3>
            <%= f.cktext_area :text %>
          </div>
        </div>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-4 col-md-offset-4">
        <%= f.submit 'Post', class: 'btn btn-success', id: 'post' %>
      </div>
    </div>
  <% end %>
</div>
