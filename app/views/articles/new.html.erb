<div class="well well-lg">
  <h1 class="text-center">Create a new blog post</h1>
  <%= form_for :article, url: articles_path do |f| %>
    <div class="row text-center">
      <div class="col-md-4 col-md-offset-4">
        <div class="form-group">
          <h3 class="text-center">Title</h3>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group" id="thumbnail-form">
          <div class="row">
            <span>Choose a thumbnail image:</span>
            <%= f.file_field :thumbnail, class: 'col-md-offset-4', id: 'imgInp', "data-filename-placement" => 'inside' %> </br></br>
          </div>
          <div class="row">
            <img id="thumbnail-preview" src="#" alt="your image" />
          </div>
          <%= f.text_field :average_color, class: 'form-control minicolors' %>
        </div>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-10 col-md-offset-1">
        <div class="form-group">
          <div>
            <h3>Body</h3>
            <%= f.cktext_area :text %>
          </div>
        </div>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-4 col-md-offset-4">
        <%= f.submit 'Post', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
