<% show %>

<% author = @author.email %>

<div class="container">
  <div class="text-center">
      <%= content_tag :h2, @article.title , :class => "article-title-text" %>
      <%= content_tag :h4, "by #{author}", :class => "article-author-text" %>
  </div>
  <%= raw(@article.text) %>
  <div class="comments-container">
    <h2>Comments</h2>
    <%= render partial: "comments/comments", locals: {commentable: @article} %>
    <%= render partial: "comments/form", locals: {commentable: @article} %>
  </div>
</div>